{
	"name": "tomochan",
	"module": "src/index.ts",
	"type": "module",
	"scripts": {
		"dev": "NODE_ENV=development bun --watch .",
		"start": "NODE_ENV=production bun ./src/index.ts",
		"docker:build": "docker compose build",
		"db:push": "bunx --bun drizzle-kit --config=drizzle.config.ts push",
		"docker:up": "docker compose up -d",
		"docker:down": "docker compose down",
		"docker:rebuild": "docker compose down tomochan && docker compose build tomochan && docker compose up -d tomochan"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/pg": "^8.11.11",
		"drizzle-kit": "^0.30.5",
		"tsx": "^4.19.3"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"cron": "^4.1.0",
		"discord.js": "^14.18.0",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.40.0",
		"pg": "^8.14.0"
	}
}
