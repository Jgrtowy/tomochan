{
    "name": "tomochan",
    "module": "src/index.ts",
    "type": "module",
    "version": "1.1.0",
    "scripts": {
        "dev": "NODE_ENV=development bun --watch .",
        "start": "NODE_ENV=production bun ./src/index.ts",
        "db:push": "bunx --bun drizzle-kit --config=drizzle.config.ts push",
        "docker:up": "docker compose up -d",
        "docker:down": "docker compose down",
        "docker:build": "docker compose build",
        "docker:rebuild": "docker compose down tomochan && docker compose build tomochan && docker compose up -d tomochan",
        "lint": "bunx @biomejs/biome lint --write --unsafe --error-on-warnings --config-path=biome.cli.json ./src/",
        "format": "bunx @biomejs/biome format --write --config-path=biome.cli.json ./src/"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/pg": "^8.11.11",
        "drizzle-kit": "^0.30.5",
        "tsx": "^4.19.3"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "adze": "^2.2.1",
        "cron": "^4.1.0",
        "datetime-difference": "^1.0.2",
        "discord.js": "^14.18.0",
        "dotenv": "^16.4.7",
        "drizzle-orm": "^0.40.0",
        "pg": "^8.14.0"
    }
}
