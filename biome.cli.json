{
    "$schema": "https://biomejs.dev/schemas/1.6.0/schema.json",
    "files": {
        "ignore": ["node_modules"]
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 320
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "rules": {
            "correctness": {
                "noUnusedImports": "warn",
                "noUnusedVariables": "warn"
            }
        }
    }
}
